							"  const PaReqValue = responseJson.post.PaReq;\r",
							"  pm.environment.set(\"PaReq\", PaReqValue);\r",
							"  console.log(\"PaReq value set:\", PaReqValue);\r",
							"} else {\r",
							"  console.error(\"Error: PaReq value not found in the response.\");\r",
							"}\r",
							"\r",
