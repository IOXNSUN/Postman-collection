		{
			"name": "ACS",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseJson = pm.response.json();\r",
							"\r",
							"if (responseJson && responseJson.result && responseJson.result.status) {\r",
							"    const resultStatus = responseJson.result.status;\r",
							"\r",
							"    if (resultStatus === \"SUCCESS\") {\r",
							"        pm.test(\"Result status is SUCCESS\", function() {\r",
							"            pm.expect(resultStatus).to.eql(\"SUCCESS\");\r",
							"        });\r",
							"    } else {\r",
							"          pm.test(\"Result status is not SUCCESS\", function () {\r",
							"            pm.expect(resultStatus).to.not.eql(\"SUCCESS\");\r",
							"            pm.expect.fail(\"Result status is not 'SUCCESS', but '\" + resultStatus + \"'\");\r",
							"        });\r",
							"    }\r",
							"} else {\r",
							"    pm.test(\"Result status is missing or undefined\", function () {\r",
							"        pm.expect.fail(\"Result object or status property is not found in the response.\");\r",
							"    });\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
